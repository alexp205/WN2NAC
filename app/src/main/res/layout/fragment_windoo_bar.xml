<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/bar_horizontal_margin"
    android:paddingRight="@dimen/bar_horizontal_margin"
    android:paddingTop="@dimen/bar_vertical_margin"
    android:paddingBottom="@dimen/bar_vertical_margin"
    tools:context=".WindooBarFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:stretchColumns="0,1,2,3"
    android:background="@android:drawable/toast_frame">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Windoo 狀態"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:layout_span="3" />

        <ImageView
            android:id="@+id/bar_pointer"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="center"
            android:src="@drawable/pointer"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bar_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:layout_span="3"
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center"
            android:id="@+id/bar_degreeTextView"
            android:layout_column="1"
            android:textColor="@android:color/primary_text_dark" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="風速 (m/s)"
            android:layout_gravity="center_horizontal"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="溫度 (°c)"
            android:layout_gravity="center_horizontal"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="濕度 (%)"
            android:layout_gravity="center_horizontal"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="壓力 (hPa)"
            android:layout_gravity="center_horizontal"
            android:layout_column="3" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bar_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:id="@+id/bar_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:layout_gravity="center_horizontal"
            android:layout_column="1"
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:id="@+id/bar_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:layout_gravity="center_horizontal"
            android:layout_column="2"
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:id="@+id/bar_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:layout_gravity="center_horizontal"
            android:layout_column="3"
            android:textColor="@android:color/primary_text_dark" />
    </TableRow>
</TableLayout>
