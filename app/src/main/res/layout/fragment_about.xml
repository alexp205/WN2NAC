<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AboutFragment"
    android:id="@+id/about">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Windoo Network \n to NTU-AS COOK Lab \n (WN2NAC) "
        android:id="@+id/aboutTextView"
        android:layout_gravity="center_horizontal|top"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center_horizontal" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Laboratory of Instrumentation and Measurement \n (COOK Team), \n Department of Atmospheric Sciences, \n National Taiwan University "
        android:layout_gravity="center_horizontal|top"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.cook-team.org"
        android:layout_gravity="center_horizontal|top"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:gravity="center_horizontal"
        android:autoLink="web"
        android:clickable="false"
        android:linksClickable="true" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 連繫: \n 林博雄  "
        android:layout_gravity="center_horizontal|top"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="polin@ntu.edu.tw"
        android:layout_gravity="center_horizontal|top"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:gravity="center_horizontal"
        android:linksClickable="true"
        android:autoLink="email" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 版本: \n 2016/1/28"
        android:layout_gravity="center_horizontal|top"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:gravity="center_horizontal" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 程式撰寫: \n 石恩"
        android:layout_gravity="center_horizontal|top"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="r01222055@ntu.edu.tw"
        android:layout_gravity="center_horizontal|top"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:gravity="center_horizontal"
        android:linksClickable="true"
        android:autoLink="email" />

</LinearLayout>
